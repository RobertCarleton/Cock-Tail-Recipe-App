<Page x:Class="CocktailRecipeApp.EditCocktailPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="EditCocktailPage">
    <Grid Margin="10">
        <TextBlock Text="Edit Cocktail" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10,0,0" />

        <!-- Cocktail Name -->
        <StackPanel Margin="0,60,0,0">
            <TextBlock Text="Cocktail Name:" />
            <TextBox x:Name="CocktailNameTextBox" Margin="0,5,0,10" />
        </StackPanel>

        <!-- Glass Type -->
        <StackPanel Margin="0,110,0,0">
            <TextBlock Text="Glass Type:" />
            <ComboBox x:Name="GlassTypeComboBox" Margin="0,5,0,10">
                <ComboBoxItem Content="Martini" />
                <ComboBoxItem Content="Highball" />
                <ComboBoxItem Content="Coupe" />
                <ComboBoxItem Content="Rocks" />
                <ComboBoxItem Content="Gin" />
                <ComboBoxItem Content="Lowball" />
            </ComboBox>
        </StackPanel>

        <!-- Ingredients -->
        <StackPanel Margin="0,160,0,0">
            <TextBlock Text="Ingredients:" />
            <TextBox x:Name="IngredientsTextBox" Margin="0,5,0,10" />
        </StackPanel>

        <!-- Instructions -->
        <StackPanel Margin="0,210,0,0">
            <TextBlock Text="Instructions:" />
            <TextBox x:Name="InstructionsTextBox" Margin="0,5,0,10" TextWrapping="Wrap" AcceptsReturn="True" Height="50" />
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,10">
            <Button Content="Save" Width="100" Click="SaveButton_Click" />
            <Button Content="Cancel" Width="100" Margin="10,0,0,0" Click="CancelButton_Click" />
        </StackPanel>
    </Grid>
</Page>
