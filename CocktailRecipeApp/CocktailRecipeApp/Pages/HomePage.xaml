<Page x:Class="CocktailRecipeApp.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Home Page">
    <Grid Margin="20">
        <!-- Main Content -->
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10">
            <!-- Title -->
            <TextBlock Text="Welcome to the Cocktail Recipe App" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,20,0,20"/>

            <!-- Description Text -->
            <TextBlock Text="Explore a variety of cocktails. Get inspired and try new recipes!" FontSize="16" HorizontalAlignment="Center" Margin="0,10,0,30"/>

            <!-- Cocktail of the Day -->
            <TextBlock Text="Cocktail of the Day" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10,0,20"/>

            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
                <Image x:Name="CocktailImage" Width="200" Height="200" Margin="10"/>
                <TextBlock x:Name="CocktailName" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"/>
                <TextBlock x:Name="CocktailDescription" FontSize="14" HorizontalAlignment="Center" TextWrapping="Wrap" Margin="10"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
