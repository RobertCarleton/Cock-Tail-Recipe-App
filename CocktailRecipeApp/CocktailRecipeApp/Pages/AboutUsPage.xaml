<Page x:Class="CocktailRecipeApp.AboutUsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="About Us">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Title Section -->
        <TextBlock Text="About Us" FontSize="32" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,20,0,20" Grid.Row="0" />

        <!-- Main Content Section -->
        <StackPanel Grid.Row="1" Margin="40">
            <TextBlock Text="Welcome to the Cocktail Recipe App!" 
                       FontSize="18" 
                       TextWrapping="Wrap" 
                       Margin="0,0,0,20" />
            <TextBlock Text="Our mission is to bring you the best cocktail recipes right at your fingertips. Explore, create, and rate your favorite cocktails. Whether you're an amateur or a mixologist, this app is your go-to guide for all things cocktails!" 
                       FontSize="16" 
                       TextWrapping="Wrap" 
                       Margin="0,0,0,20" />
            <TextBlock Text="For support or inquiries, feel free to reach out:" 
                       FontSize="16" 
                       FontWeight="Bold" 
                       Margin="0,20,0,10" />
            <TextBlock Text="Email: support@cocktailapp.com" 
                       FontSize="16" 
                       Foreground="Blue" 
                       TextWrapping="Wrap" 
                       Margin="0,0,0,5" />
            <TextBlock Text="Phone: +1-800-COCKTAIL" 
                       FontSize="16" 
                       Foreground="Blue" 
                       TextWrapping="Wrap" 
                       Margin="0,0,0,5" />
        </StackPanel>

        <!-- Footer Section -->
        <TextBlock Text="Thank you for using the Cocktail Recipe App!" 
                   FontSize="14" 
                   HorizontalAlignment="Center" 
                   Margin="0,20,0,0" 
                   Grid.Row="2" />
    </Grid>
</Page>
