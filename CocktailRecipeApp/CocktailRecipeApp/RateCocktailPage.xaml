<Page x:Class="CocktailRecipeApp.RateCocktailPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="RateCocktailPage">
    <Grid Margin="10">
        <TextBlock Text="Rate Cocktail" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10,0,0" />

        <!-- Rating Slider -->
        <StackPanel Margin="0,60,0,0">
            <TextBlock Text="Rating (1 to 5):" />
            <Slider x:Name="RatingSlider" Minimum="1" Maximum="5" TickFrequency="1" IsSnapToTickEnabled="True" Margin="0,5,0,10" />
            <TextBlock x:Name="RatingValueTextBlock" Text="3" HorizontalAlignment="Center" FontSize="16" FontWeight="Bold" />
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,10">
            <Button Content="Save" Width="100" Click="SaveButton_Click" />
            <Button Content="Cancel" Width="100" Margin="10,0,0,0" Click="CancelButton_Click" />
        </StackPanel>
    </Grid>
</Page>
