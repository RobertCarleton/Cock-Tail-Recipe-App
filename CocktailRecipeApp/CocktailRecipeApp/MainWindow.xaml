<Window x:Class="CocktailRecipeApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Cocktail Recipe App" Height="600" Width="800">

    <DockPanel>
        <!-- Navigation Menu -->
        <StackPanel DockPanel.Dock="Left" Background="#333" Width="200">
            <TextBlock Text="Cocktail App" FontSize="20" Foreground="White" Margin="10" />
            <Button Content="Home" Margin="10" Click="NavigateToHome_Click" />
            <Button Content="Edit Cocktail" Margin="10" Click="NavigateToEditCocktail_Click" />
            <Button Content="Rate Cocktail" Margin="10" Click="NavigateToRateCocktail_Click" />
        </StackPanel>

        <!-- Main Content Area -->
        <Grid Margin="10">
            <!-- Title -->
            <TextBlock Text="Cocktail Recipe App" FontSize="24" FontWeight="Bold" 
                       HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0"/>

            <!-- Search Section -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,60,0,0">
                <Grid>
                    <TextBox x:Name="SearchTextBox" Width="200" Height="30" />
                    <TextBlock Text="Search by name or ingredient" Foreground="Gray" Margin="5,5,0,0" 
                               IsHitTestVisible="False" Visibility="{Binding Text, ElementName=SearchTextBox, Converter={StaticResource StringToVisibilityConverter}}" />
                </Grid>
                <Button Content="Search" Width="100" Height="30" Margin="10,0,0,0" Click="SearchButton_Click" />
            </StackPanel>

            <!-- Cocktails List -->
            <ListView x:Name="CocktailsListView" Margin="10,100,10,150" SelectionChanged="CocktailsListView_SelectionChanged">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <Image Source="{Binding ImagePath}" Width="50" Height="50" Margin="5" />
                            <StackPanel>
                                <TextBlock Text="{Binding CocktailName}" FontWeight="Bold" FontSize="14" />
                                <TextBlock Text="{Binding Ingredient}" FontSize="12" Foreground="Gray" />
                            </StackPanel>
                            <CheckBox Content="Favourite" IsChecked="{Binding IsFavourite}" Margin="10,0,0,0" VerticalAlignment="Center" />
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <!-- Action Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,10">
                <Button Content="Add New" Width="100" Height="40" Margin="10" Click="AddButton_Click" />
                <Button Content="Edit" Width="100" Height="40" Margin="10" Click="EditButton_Click" />
                <Button Content="Rate" Width="100" Height="40" Margin="10" Click="RateButton_Click" />
                <Button Content="Random Cocktail" Width="150" Height="40" Margin="10" Click="RandomButton_Click" />
            </StackPanel>
        </Grid>
        <!-- Main Content Area -->
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" />
    </DockPanel>
</Window>
